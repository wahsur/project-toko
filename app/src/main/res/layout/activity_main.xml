<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Header Atas (Icon Profil) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F3F3F3">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profil" />
    </RelativeLayout>

    <!-- Header Toko -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#002B5B"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNamaToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Toko"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Menu Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Barang -->
        <LinearLayout
            android:id="@+id/btnBarang"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border_box">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_barang"
                android:contentDescription="Barang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:text="Barang"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Kategori -->
        <LinearLayout
            android:id="@+id/btnKategori"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border_box">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_kategori"
                android:contentDescription="Kategori" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Kategori"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Transaksi -->
        <LinearLayout
            android:id="@+id/btnTransaksi"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border_box">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_transaksi"
                android:contentDescription="Transaksi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Transaksi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Riwayat -->
        <LinearLayout
            android:id="@+id/btnRiwayat"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border_box">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_riwayat"
                android:contentDescription="Riwayat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Riwayat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>
